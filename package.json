{
  "name": "record-press",
  "version": "0.2.0",
  "description": "A machine for manufacturing JavaScript records.",
  "main": "dist/index.js",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "test": "mocha",
    "tdd": "mocha -w -R min",
    "cover": "nyc mocha",
    "lint": "eslint --ext .ts .",
    "prepack": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.test.ts",
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "cache": false,
    "temp-dir": "coverage/.nyc_output/"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "standard-with-typescript"
    ],
    "rules": {
      "padded-blocks": [
        "error",
        {
          "classes": "always"
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/prefer-function-type": "off",
      "@typescript-eslint/space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist/",
    "coverage/",
    "node_modules/"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/faker": "4.1.11",
    "@types/mocha": "7.0.2",
    "@types/node": "13.13.5",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "eslint-config-standard-with-typescript": "16.0.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "faker": "4.1.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "mocha": "7.1.2",
    "nyc": "15.0.1",
    "ts-node": "8.10.1",
    "typescript": "3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/record-press.git"
  },
  "bugs": {
    "url": "https://github.com/thebearingedge/record-press/issues"
  },
  "homepage": "https://github.com/thebearingedge/record-press#readme"
}
